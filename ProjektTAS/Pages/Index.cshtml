                @if (isLoggedIn)
                {
                    <button class="ui teal button "><a href="Index">Wyloguj się</a></button>
                }
                else
                {
                    if (isRegistered)
                    {
                        <button class="ui teal button"><a href="Login">Zarejestrowałeś się! Kliknij ten przycisk by się zalogować</a></button>
                    }
