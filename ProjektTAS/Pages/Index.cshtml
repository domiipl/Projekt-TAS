@model ProjektTAS.Pages.IndexModel
@{
    Layout = null;
    bool isLoggedIn = false;
    bool isRegistered = false;
}

@{
    if (Request.Query.TryGetValue("token", out Microsoft.Extensions.Primitives.StringValues value) && ProjektTAS.Classes.StaticMethods.IsTokenValid(value.ToString()))
    {
        isLoggedIn = true;
    }
    if (Request.Query.TryGetValue("registered", out value) && value == "true")
    {
        isRegistered = true;
    }
}

