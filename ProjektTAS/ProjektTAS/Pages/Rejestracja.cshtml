@page
@model ProjektTAS.Pages.RejestracjaModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Rejestracja</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.10/semantic.min.css">
    <link rel="stylesheet" href="~/css/style.css">

</head>
<body>

    <div class="ui grid rejestracja">
        <div class="column">
            <h2 class="ui teal image header">
                <div class="content">
                    Podaj swoje dane
                </div>
            </h2>
            <form class="ui large form">
                <div class="ui stacked segment">
                    <div class="field">
                        <div class="ui left icon input">
                            <i class="user icon"></i>
                            <input type="text" name="imie" placeholder="Podaj imię">
                        </div>
                    </div>
                    <div class="field">
                        <div class="ui left icon input">
                            <i class="user icon"></i>
                            <input type="text" name="nazwisko" placeholder="Podaj nazwisko">
                        </div>
                    </div>
                    <div class="field">
                        <div class="ui left icon input">
                            <i class="address book icon"></i>
                            <input type="text" name="email" placeholder="Adres e-main">
                        </div>
                    </div>
                    <div class="field">
                        <div class="ui left icon input">
                            <i class="lock icon"></i>
                            <input type="password" name="haslo1" placeholder="Hasło">
                        </div>
                    </div>
                    <div class="field">
                        <div class="ui left icon input">
                            <i class="lock icon"></i>
                            <input type="password" name="haslo2" placeholder="Powtórz hasło">
                        </div>
                    </div>
                    <div class="ui fluid large teal submit button">Rejestracja</div>
                </div>


            </form>


            <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.10/semantic.min.js"></script>
            <script src="~/js/main.js"></script>
</body>
</html>
